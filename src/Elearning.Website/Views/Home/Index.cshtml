@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>The Learning Center</h1>
    <p class="lead">The place for technology classes</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Class List</h2>
        <p>
            See our Class Offerings
        </p>
        <div class="btn btn-default">
            @Html.ActionLink("Class List", "ClassList")
        </div>
    </div>
    <div class="col-md-4">
        <h2>Your Enrolled Classes</h2>
        <p>See the classes you are enrolled in.</p>
        <div class="btn btn-default">
            @Html.ActionLink("Enrolled Classes", "EnrolledClasses")
        </div>
    </div>
    <div class="col-md-4">
        <h2>Enroll in a class</h2>
        <p>Take a new class.</p>
        <div class="btn btn-default">
            @Html.ActionLink("Enroll in new Class", "ClasstoEnroll")
        </div>
    </div>
</div>