@*@model IEnumerable<Elearning.Website.Models.ClassModel>*@
@model Elearning.Website.Models.EnrollClassList

@{
    ViewBag.Title = "ClasstoEnroll";
    //IEnumerable<SelectListItem> selectList = ViewBag.Items;
}

<h2>Class to Enroll</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("ClassToEnroll", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Add Class</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @*@Html.DropDownList("Items")*@
                    @*@Html.DropDownListFor(m=>m.Name,new SelectList(selectList, "Value", "Text"), htmlAttributes: new { @class = "col-md-2 control-label" })*@
                    @Html.DropDownListFor(m=>m.ClassId, new SelectList(Model.ClassList, "Id", "Name"))
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add Class" class="btn btn-primary" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Back to List", "Index")
                </p>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
